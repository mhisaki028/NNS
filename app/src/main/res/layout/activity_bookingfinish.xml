<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/check"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_check"
            android:tint="@color/textcolor"
            android:padding="20dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/check"
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Successful"
            android:textColor="@color/textColor"
            android:fontFamily="@font/monsterrat"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/label2"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label1"
            android:textSize="15sp"
            android:text="Click the Button below to see your booking details"/>

        <Button
            android:id="@+id/btnFinish"
            android:layout_below="@id/label2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btnsignup_bg"
            android:text="See Details"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/monsterratbold"
            android:textColor="@color/white"/>


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnFinish"
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Happens Next?"
            android:textColor="@color/textColor"
            android:fontFamily="@font/monsterrat"
            android:textSize="18sp"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:id="@id/img1"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:src="@drawable/inform"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/label3"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/label4"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="We will contact you for confirmation"/>

        <ImageView
            android:id="@id/img2"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:src="@drawable/deliver"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/label4"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/label5"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img2"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="We will inform you when we are ready to go to your home"/>

        <ImageView
            android:id="@id/img3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/label5"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/label6"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img3"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="You will receive a notification when the lab test result is out"/>




    </RelativeLayout>








</RelativeLayout>