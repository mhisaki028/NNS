<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/lightgray">

    <include
        android:id="@+id/app_bar_history"
        layout="@layout/app_bar_history" />

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_profile"
        android:layout_below="@id/app_bar_history">

        <ImageView
            android:id="@+id/img1"
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_medtech"
            android:background="@drawable/circlebackground"
            android:padding="25dp"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_below="@id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/monsterrat"
            android:text="Your Booking History"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listview_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/list_divider_white">

        </ListView>


    </RelativeLayout>


</RelativeLayout>