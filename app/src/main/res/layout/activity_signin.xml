<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/rootLayout"
    tools:context=".SignInActivity">


    <RelativeLayout
        android:id="@+id/logolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:layout_marginTop="40dp"
            android:src="@mipmap/mdlablogo"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relemail"
        android:layout_below="@id/logolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txttop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are about to "
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/labdesc_textcolor"
            android:fontFamily="@font/monsterratbold"/>

        <TextView
            android:id="@+id/txtsignin"
            android:layout_below="@id/txttop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Sign In"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monsterratbold"
            android:textSize="20sp"
            android:textColor="@color/lababout_textcolor"/>


        <EditText
            android:id="@+id/edtEmail"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/hint_defaultcolor"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:layout_below="@id/txtsignin"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/edt_signup_bg"/>


        <EditText
            android:id="@+id/edtPassword"
            android:layout_below="@id/edtEmail"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/hint_defaultcolor"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/edt_signup_bg"/>


        <Button
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp"
            android:textColor="@color/subtitle_textcolor"
            android:text="Forgot Password ?"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/monsterratbold"
            android:background="@color/transparent" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_marginTop="30dp"
            android:layout_below="@id/btnForgotPassword"
            android:textSize="14sp"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/monsterratbold"
            android:background="@drawable/btnsignup_bg"/>

        <TextView
            android:id="@+id/txtNoAccount"
            android:layout_below="@id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Have An Account ?"
            android:textColor="@color/darkertext"
            android:textSize="14sp"
            android:fontFamily="@font/monsterratmed"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />





        <Button
            android:id="@+id/btnSignUp"
            android:textSize="14sp"
            android:text="Sign Up Here"
            android:textColor="@color/textcolor"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_below="@id/txtNoAccount"
            android:fontFamily="@font/monsterratbold"
            android:background="@color/transparent"/>






    </RelativeLayout>



    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_progressbar"
        android:indeterminateTint="@color/btnsignin_textcolor"
        android:padding="5dp"
        android:visibility="gone"
        />

</RelativeLayout>