<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include
        android:id="@+id/app_bar_labservices"
        layout="@layout/app_bar_labservices" />

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_labservices"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txttop"
            android:text="Browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar_chooselab"
            android:fontFamily="@font/monsterratbold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textSize="34sp"/>

        <EditText
            android:id="@+id/search_field"
            android:layout_below="@id/txttop"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/search_layout"
            android:drawableLeft="@drawable/places_ic_search"
            android:drawableTint="@color/hint_defaultcolor"
            android:hint="Search"
            android:textColorHint="@color/hint_defaultcolor"
            android:textColor="@color/hint_defaultcolor"
            android:textSize="17sp"
            android:fontFamily="@font/monsterratmed"
            android:drawablePadding="20dp"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_below="@id/txttop"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:text="GO"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:fontFamily="@font/monsterratbold"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_below="@id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ListView
            android:id="@+id/listview_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:divider="@drawable/list_divider_2">

        </ListView>


    </RelativeLayout>


</RelativeLayout>