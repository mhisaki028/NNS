<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@color/lightgray">

    <include
        android:id="@+id/app_bar_labservices"
        layout="@layout/app_bar_labservices" />

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_labservices"
     >

        <EditText
            android:id="@+id/search_field"
            android:layout_below="@id/txttop"
            android:inputType="textFilter"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/search_layout"
            android:drawableLeft="@drawable/ic_search"
            android:drawableTint="@color/hint_defaultcolor"
            android:hint="Search"
            android:textColorHint="@color/hint_defaultcolor"
            android:textColor="@color/hint_defaultcolor"
            android:textSize="17sp"
            android:fontFamily="@font/monsterrat"
            android:drawablePadding="20dp"
            android:paddingLeft="10dp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_below="@id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ListView
            android:id="@+id/listview_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:divider="@drawable/list_divider_white">

        </ListView>


    </RelativeLayout>


</RelativeLayout>