<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_popup">


    <ImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/mdlablogo"
        android:layout_marginLeft="40dp"
    android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/mseuf"
        android:layout_toRightOf="@id/img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>


    <ImageView
        android:id="@+id/img3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ccs"
        android:layout_toRightOf="@id/img2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/txtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="37dp"
        android:text="CREDITS"
        android:textSize="20sp"
        android:fontFamily="@font/monsterratbold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_below="@id/txtt"
        android:id="@+id/txt1"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Manuel S.Enverga University Foundation"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_below="@id/txt1"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="College of Computing and Multimedia Studies" />

    <TextView
        android:id="@+id/txt3"
        android:drawableLeft="@drawable/ic_sentiment"
        android:layout_below="@id/txt2"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Raymond Bermudez" />

    <TextView
        android:id="@+id/txt4"
        android:drawableLeft="@drawable/ic_sentiment"
        android:layout_below="@id/txt3"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Jessa Cahilig" />

    <TextView
        android:id="@+id/txt5"
        android:drawableLeft="@drawable/ic_sentiment"
        android:layout_below="@id/txt4"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Ervien Roxas"
        android:layout_marginBottom="10dp"/>



</RelativeLayout>