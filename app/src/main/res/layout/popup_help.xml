<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_popup">


    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_help"
        android:tint="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_below="@id/img"
        android:id="@+id/txt1"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/monsterratbold"
        android:text="HOW TO BOOK"/>

    <TextView
        android:id="@+id/txt2"
        android:drawableLeft="@drawable/ic_check"
        android:layout_below="@id/txt1"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Click the 'Book Home Service' button to start booking" />

    <TextView
        android:id="@+id/txt3"
        android:drawableLeft="@drawable/ic_check"
        android:layout_below="@id/txt2"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Choose your medical laboratory" />

    <TextView
        android:id="@+id/txt4"
        android:drawableLeft="@drawable/ic_check"
        android:layout_below="@id/txt3"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Choose your lab test" />

    <TextView
        android:id="@+id/txt5"
        android:drawableLeft="@drawable/ic_check"
        android:layout_below="@id/txt4"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Choose your desired date of home service" />

    <TextView
        android:id="@+id/txt6"
        android:drawableLeft="@drawable/ic_check"
        android:layout_below="@id/txt5"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Choose your preferred time" />

    <TextView
        android:id="@+id/txt7"
        android:drawableLeft="@drawable/ic_check"
        android:layout_below="@id/txt6"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="Enter your personal details" />

    <TextView
        android:id="@+id/txt8"
        android:drawableLeft="@drawable/ic_check"
        android:layout_below="@id/txt7"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textColor="@color/subtitle_textcolor"
        android:text="YOU'RE DONE"
        android:fontFamily="@font/monsterratbold"/>





</RelativeLayout>