<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/app_bar_booking"
        android:id="@+id/app_bar_booking"/>

    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_below="@id/app_bar_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/txttop"
            android:text="Choose Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar_chooselab"
            android:fontFamily="@font/monsterratbold"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:textSize="27sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/time_layout"
        android:id="@+id/reltop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recbackground_colored"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/monsterratbold"
            android:text="Time"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/meridian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_centerHorizontal="true"
            android:text="AM"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>




    </RelativeLayout>

<RelativeLayout
    android:id="@+id/reltime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/reltop">

        <TextView
            android:id="@+id/txtchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Time"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:textSize="17sp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/monsterratbold"/>


        <TextView
            android:id="@+id/eight"
            android:layout_below="@id/txtchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_signup_bg"
            android:padding="10dp"
            android:text="8:00 - 9:00"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/lababout_textcolor"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/nine"
            android:layout_below="@id/txtchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_signup_bg"
            android:padding="10dp"
            android:text="9:00 - 10:00"
            android:textColor="@color/lababout_textcolor"
            android:textSize="17sp"
            android:layout_toRightOf="@id/eight"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/ten"
            android:layout_below="@id/txtchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_signup_bg"
            android:padding="10dp"
            android:text="10:00 - 11:00"
            android:textSize="17sp"
            android:textColor="@color/lababout_textcolor"
            android:layout_toRightOf="@id/nine"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/eleven"
            android:layout_below="@id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_signup_bg"
            android:padding="10dp"
            android:text="11:00 - 12:00"
            android:textSize="17sp"
            android:textColor="@color/lababout_textcolor"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/one"
            android:layout_below="@id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_signup_bg"
            android:padding="10dp"
            android:text="1:00 - 2:00"
            android:textSize="17sp"
            android:textColor="@color/lababout_textcolor"
            android:layout_toRightOf="@id/eleven"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/two"
            android:layout_below="@id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_signup_bg"
            android:padding="10dp"
            android:text="2:00 - 3:00"
            android:textSize="17sp"
            android:layout_toRightOf="@id/one"
            android:textColor="@color/lababout_textcolor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/three"
            android:layout_below="@id/eleven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_signup_bg"
            android:padding="10dp"
            android:text="3:00 - 4:00"
            android:textSize="17sp"
            android:textColor="@color/lababout_textcolor"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:background="@color/background_opacity"
        android:layout_below="@id/reltime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/monsterratbold"
            android:background="@drawable/btnsignup_bg" />


</RelativeLayout>


</RelativeLayout>