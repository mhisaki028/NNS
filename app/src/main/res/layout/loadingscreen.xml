<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:id="@+id/rootLayout">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/doctor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/imgdoc"/>


    <RelativeLayout
        android:background="@drawable/list_bg"
        android:layout_below="@id/imgdoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:text="Booking... "
        android:fontFamily="@font/monsterratbold"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:id="@+id/txttop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/txttop"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="0 %"
        android:fontFamily="@font/monsterratbold"
        android:textColor="@color/textcolor"
        android:textSize="22sp"
        android:id="@+id/text_view" />

    <ProgressBar
        android:progressTint="@color/colorPrimaryLight"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/text_view"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        />




</RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/mdlablogo"
        android:layout_alignParentBottom="true"
        android:id="@+id/mdlogo"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="35dp"
        android:layout_toRightOf="@id/mdlogo"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="your Mobile and Digital Application at your Doorstep"/>


</RelativeLayout>