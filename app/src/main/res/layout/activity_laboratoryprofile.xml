<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    tools:context=".ChooseLaboratoryActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/lightgray">

    <include layout="@layout/app_bar_lab"
        android:id="@+id/app_bar_lab"/>

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/app_bar_lab">

        <ImageView
            android:id="@+id/lab_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/circlebackground"
            android:padding="10dp" />


        <TextView
            android:id="@+id/lab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lab_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monsterratbold"
            android:text="Laboratory Name"
            android:textColor="@color/textcolor"
            android:textSize="24sp" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lab_name"
            android:id="@+id/lab_desc"
            android:layout_width="wrap_content"
            android:text="Description"
            android:textSize="15sp"
            android:textColor="@color/labdesc_textcolor"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnLabInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:background="@drawable/list_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_user"
                android:background="@drawable/circlebackground_colored"
                android:padding="10dp"
                android:tint="@color/white"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/txtlabinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img1"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:fontFamily="@font/monsterratbold"
                android:textColor="@color/subtitle_textcolor"
                android:text="Laboratory Information"/>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron"
                android:tint="@color/textcolor" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnLabInfo"
            android:layout_marginTop="10dp"
            android:background="@drawable/list_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_star"
                android:layout_marginBottom="15dp"
                android:background="@drawable/circlebackground_colored"
                android:padding="10dp"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/txtreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img2"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:fontFamily="@font/monsterratbold"
                android:textColor="@color/subtitle_textcolor"
                android:text="Reviews"/>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron"
                android:tint="@color/textcolor" />


        </RelativeLayout>



</RelativeLayout>